<h1>Les films vus :</h1>

<%= @all_films.inspect %>

<% @all_films.each do |result| %>
    <a class="links" href="/film/<%= result.film_id %>">
      <%= result.name %><br/>
          <% if result.url %>
            <%= image_tag( "http://image.tmdb.org/t/p/w154" + result.url) %><br/><br/>
          <% end %>
    </a>
<% end %>