<br />
<%= @fiche.title %><br/>
<% if @fiche.poster_path %>
    <%= image_tag( "http://image.tmdb.org/t/p/w154" + @fiche.poster_path) %><br/><br/>
<% end %>
<% if current_user %>

  <%= link_to 'Add to my View list',"#", controller: 'links_controller', action: 'create', user_id: current_user.id, film_id: @fiche.id, status: 1, method: :post %>

<% end %>
<% if @trailer %>
    <% @trailer.youtube.first(1).each do |trailer| %>
    <iframe width="100%" height="450" src="https://www.youtube.com/embed/<%= trailer.source %>" frameborder="0" allowfullscreen></iframe>
    <% end %>
<% end %>
